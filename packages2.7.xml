    </package>

    <package name='BICEPS' version='1.1.0'
				url="https://github.com/rbouckaert/biceps/releases/download/v1.1.0/BICEPS.addon.v1.1.0.zip"
				description="Bayesian Integrated Coalescent Epoch PlotS + Yule Skyline"
