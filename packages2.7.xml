        <depends on='BEAST.base' atleast='2.7.0' atmost='2.7.9'/>
        <depends on='BEAST.app' atleast='2.7.0'/>
    </package>

    <package name='OBAMA' version='1.1.0' 
        url="https://github.com/rbouckaert/obama/releases/download/v1.1.0/OBAMA.addon.v1.1.0.zip"
        description="OBAMA for Bayesian Amino-acid Model Averaging"
        projectURL="https://github.com/rbouckaert/obama/">
